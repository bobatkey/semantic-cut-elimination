# Set Agda as the preprocessor
add_cus_dep('lagda', 'tex', 0, 'run_agda');
sub run_agda {
  my $base = shift @_;
  # Run the preprocessor
  return system('agda', '--latex', '--latex-dir=sections', "$base.lagda");
}
